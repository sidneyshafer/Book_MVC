@page
@model BookWebRazor_Temp.Pages.Categories.IndexModel

@{
    ViewData["Title"] = "Category";
}

<div class="container">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark pb-0">Category List</h2>
        </div>
        <div class="col-6 text-end pb-4">
            <a asp-page="/Categories/Create" class="btn btn-warning">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>
    <table class="table table-bordered table-striped pt-0">
        <thead>
            <tr>
                <th>Category Name</th>
                <th>Display Order</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-100" role="group">
                            <a asp-page="/Categories/Edit" asp-route-id="@obj.Id" class="btn btn-warning mx-2 w-25">
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-page="/Categories/Delete" asp-route-id="@obj.Id" class="btn btn-outline-dark mx-2 w-25">
                                <i class="bi bi-trash3"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
